---
import type { HTMLAttributes } from "astro/types";
interface Props extends HTMLAttributes<"a"> {
  to?: string;
}

const { to, href: hrefProp, ...restProps } = Astro.props;

const href = hrefProp ? hrefProp : `${import.meta.env.BASE_URL}${to}`;
---

<a class="underline" href={href} {...restProps}><slot /></a>
